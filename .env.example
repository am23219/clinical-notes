# Azure OpenAI Credentials - get these from your Azure portal
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_VERSION=2023-05-15

# Model deployments - set these to match your deployed models in Azure
AZURE_OPENAI_DEPLOYMENT_SUMMARY=your_gpt_deployment_for_summaries
AZURE_OPENAI_DEPLOYMENT_EXTRACTION=your_gpt_deployment_for_extraction

# App config - usually don't need to change these
APP_ENV=development  # change to 'production' for prod
LOG_LEVEL=INFO 